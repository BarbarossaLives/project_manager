# Project Manager Configuration
# Copy this file to .env and modify as needed

# Server Configuration
PROJECT_MANAGER_HOST=0.0.0.0
PROJECT_MANAGER_PORT=8080

# Database Configuration
DATABASE_URL=sqlite:///./project_tracker.db

# AI Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Auto-setup Configuration
AUTO_SETUP_DATABASE=true
AUTO_SETUP_AI=true
AUTO_START_OLLAMA=true

# Development Configuration
ENVIRONMENT=development
DEBUG=false
RELOAD=true
LOG_LEVEL=INFO

# Alternative port configurations for different projects:
# For development: PROJECT_MANAGER_PORT=8080
# For staging: PROJECT_MANAGER_PORT=8081
# For production: PROJECT_MANAGER_PORT=8082
